<?page title="Dashboard - ZK Admin"?>
<!-- Load Bootstrap  -->
<?link href="bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css"?>


<!-- Google Open Sans font -->
<!-- Load fonts from local -->
<?link href="css/fonts.css" rel="stylesheet" type="text/css"?>

<!-- Unmark if we want to use fonts from google server
<?link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400' rel='stylesheet' type='text/css'?>
-->
<?link href="less/style.css" rel="stylesheet" type="text/css"?>
<?link href="less/index.css.dsp" rel="stylesheet" type="text/css"?>

<zk xmlns:n="native">
	<include src="navbar.zul"/>             
	<hlayout id="main" spacing="0">
		<include src="sidebar.zul"/>    
		<vlayout spacing="0" hflex="1"  >
			<div sclass="breadcrumbs">
					<div sclass="breadcrumb">
							<span sclass="home-icon z-icon-user"/>
					    <a label="Socios" href="#"/>
							<label value="Informacion"/>
			 		</div>
		 	</div>
<!-- <vbox> -->
		<div class='contenedor'>
				
	 <div sclass="page-header">
	    <label value="Registrar Informacion Accion"/>
	  
	  </div>
		   <div class='contenido '   align="center"  >
   				 <div class="col-md-8 col-centered " 
   				  form="@id('fx') @load(vm.user) @save(vm.user, before='submit')
   				   @validator('demo.input.form_sample.FormValidator', retypedPassword=vm.retypedPassword, 
   				   captcha=vm.captcha, captchaInput=vm.captchaInput)">
        			<div class='rcorners6' width="600px" height="400px">
        		
        			<grid width="580px" >
          
			            	<rows class="col-md-12">
			            
			                  <row class="col-md-11">
			              		  <div>
			              		   	Seleccione Accion <combobox width="140px">
			              		   	<comboitem label="Accion #12345" />
			              		   	<comboitem label="Accion #67891" />
			              		   	<comboitem label="Accion #02468" />
			              		   	<comboitem label="Accion #13791" />			              		   	
			              		   	</combobox>
			              		   </div>
			                      <div>
			                      	<button  iconSclass="z-icon-search"  class='btn-primary btn-primary'/>
			                      </div>			                      
			                  </row>
			                  <row class="col-md-11">
			              		  <div>
			              		   Concepto Venta <textbox type="text" value="REMATE" width="265px" />
			                      </div>
			              		  <div>
			              		   Numero Accion <textbox type="text" value="12345" width="265px" tabindex="2" />
			                      </div>
			                      
			                  </row>
			                  <row class="col-md-11">
			                  	   <div>
			                        Fecha Inicio Oferta <datebox format="MM/dd/yyyy"/>
			                      </div>  
			                  	  <div>
			                        Fecha Final Oferta <datebox format="MM/dd/yyyy"/>
			                      </div>  			              		
			                  </row>
			                   <row class="col-md-11">
			                  	   <div>
			                        Precio <textbox type="text" value="60.000"  width="265px" tabindex="2" />
			                      </div>  
			                  	  <div>
			                        Requisitos <textbox type="text" value="Estados de cuenta,Carta residencia"  width="265px" tabindex="2" />
			                      </div>  			              		
			                  </row>      

			                  <row class="col-md-11 col-centered">
			                  	<hlayout width="">
			                  	
			                  	<separator spacing="150px"></separator>	                  	
			                  		                  		
			                  		<div>
			                    		<button  iconSclass="z-icon-edit"  class='btn-primary boton-guardar' label="Publicar"/>
			                     	</div><separator spacing="80px"></separator>
			                     	
			                     	<div>
			                    		<button  iconSclass="z-icon-edit"  class='btn-primary boton-guardar' label="Cancelar "/>
			                     	</div><separator spacing="80px"></separator>
			                     	
			                  	</hlayout>
			             		
			                 </row>
			 
			            </rows>
			        </grid>
			        </div>
   				 </div>

	</div>		
			
		</div>		
<!-- </vbox>	 -->
</vlayout>
</hlayout>
</zk>