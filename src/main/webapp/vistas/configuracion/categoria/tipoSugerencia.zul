							<auxheader align="left" colspan="3">
							
							<label value="Tipos De Sugerencias" />
							</auxheader>
						</auxhead>
						<columns class="z-grid z-column-content ">
							<column label="Id Sugerencia"
								align="center" width="150px" />
							<column label="Nombre Sugerencia"
								align="center" width="150px" />
							<column label="Acciones" align="center"
								width="150px" />
						</columns>
						<rows>
							<row>
							    <label value="001" />
								<label value="Sugerencia1" />
								<div>
									<button sclass="btn-link" iconSclass="z-icon-pencil blue" tooltiptext="Editar" />
									<button sclass="btn-link" iconSclass="z-icon-trash-o red" tooltiptext="Eliminar" />
								</div>
							</row>
							<row>
							   <label value="002" />
								<label value="Sugerencia2" />
								<div>
									<button sclass="btn-link" iconSclass="z-icon-pencil blue" tooltiptext="Editar" />
									<button sclass="btn-link" iconSclass="z-icon-trash-o red" tooltiptext="Eliminar" />
								</div>
							</row>
							<row>
							    <label value="003" />
								<label value="Sugerencia3" />
								<div>

									<button sclass="btn-link"
										iconSclass="z-icon-pencil blue" tooltiptext="Editar" />
									<button sclass="btn-link"
										iconSclass="z-icon-trash-o red" tooltiptext="Eliminar" />
								</div>
							</row>
							<row>
							    <label value="004" />
								<label value="Suegerencia4" />
								<div>
									<button sclass="btn-link"
										iconSclass="z-icon-pencil blue" tooltiptext="Editar" />
									<button sclass="btn-link"
										iconSclass="z-icon-trash-o red" tooltiptext="Eliminar" />
								</div>
							</row>
						</rows>
					</grid>
					<!-- FIN GRID DE TIPO SUGERENCIA-->
					<separator spacing="20px" />
									</div><!--FIN DIV GRID DE TIPO SUGERENCIA-->
		 </div>
