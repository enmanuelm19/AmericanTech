<zk xmlns:n="native">
	<include src="/vistas/layouts/navbar.zul" />
	<hlayout spacing="0">
		<include src="/vistas/layouts/sidebar.zul" />

		<vlayout spacing="0" hflex="1">
			<div sclass="breadcrumbs">
				<div sclass="breadcrumb">
					<span sclass="home-icon z-icon-cogs" />
					<a label="Categoria" href="#" />
					<label value="Tipo de Sugerencia" />
				</div>

			</div>
			<div class='contenedor' align="center">
				<div sclass="page-header" align="left">
					<label value="TIPO DE SUGERENCIA" />
				</div>

				<div align="center" sclass="form-pricing"
					width="600px"><!-- INICIO DIV GRID DE TIPO SUGERENCIA-->
					<div apply="controllers.ControllerTipoSugerencia"
						xmlns:w='client' align="left">
						<button id="btnRegTipoSugerencia" label="Agregar"
							iconSclass="z-icon-floppy-o" class='boton-guardar'/>
					</div>
					<!-- GRID DE TIPO SUGERENCIA-->
					<grid mold="paging" pageSize="8" width="450px" style="margin-top:15px">
