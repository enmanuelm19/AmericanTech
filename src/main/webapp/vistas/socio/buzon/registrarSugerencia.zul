									model="@load(vm.colors)" selectedItem="@bind(vm.shirtColor)" > 
									                    
									<template name="model">
										                        
										<comboitem label="@load(each)"                             
											image="@load(vm.getIconImage(each))" />
										                    
									</template>
									  <comboitem label="Prueba"></comboitem>       
								</combobox>-->
								<combobox></combobox>
							</div>

						</row>
						<row class="col-md-12">
							<div>
								Escriba aquí su sugerencia
								<textbox cols="45" rows="4"
									readonly="false" type="text" value="" width="100%"
									constraint="no empty" />
							</div>

						</row>

					</rows>
				</grid>
				<space spacing="15%" />

				<div>
					<button iconSclass="z-icon-floppy-o"
						class='boton-guardar' label="Registrar" />
					<space spacing="10%" />
					<button iconSclass="z-icon-times"
						class='boton-cancelar' label="Cancelar" />
				</div>
				<separator spacing="5%" />
			</div>
		</div>
	</window>
</zk>

